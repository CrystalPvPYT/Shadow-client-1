package mystra.commands;

import mystra.command.Command;
import mystra.main.Mystra;
import mystra.mods.Speed;

public class LongJumpMode extends Command{

	@Override
	public String getAlias() {
		return "longjumpmode";
	}

	@Override
	public String getDescription() {
		return "Changes longjump mode";
	}

	@Override
	public String getSyntax() {
		return ".longjumpmode <mode>";
	}

	@Override
	public void onCommand(String command, String[] args) throws Exception {		
		if(args.length != 1) {
			Mystra.addChatMessage("Syntex error, try: longjumpmode <Mode> / <List>");
			return;
		}else {
			if(args[0].equalsIgnoreCase("CubeCraft")) {
				Speed.mode = args[0];
				Mystra.addChatMessage("§aSuccessfully set LongJump to §b" + args[0]);
			}else {
				Mystra.addChatMessage("§cUnknown Mode.");
			}
			
			if(args[0].equalsIgnoreCase("list")) {
				Mystra.addChatMessage("§aCubeCraft");
			}
			
		}
	}

}