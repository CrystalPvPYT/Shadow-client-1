package mystra.mods;

import mystra.main.Category;
import mystra.notifications.Notification;
import mystra.notifications.NotificationManager;
import mystra.notifications.NotificationType;

public class Criticals extends Module{

	public Criticals() {
		super("Criticals", 0, Category.COMBAT);
		}
	
	@Override
	public void onUpdate() {
		if(this.isToggled())
		{
			if(mc.thePlayer.onGround){
			    mc.thePlayer.onGround = false;
			    mc.thePlayer.motionY = 0.1000000014901161D;
			    mc.thePlayer.onGround = true;
			}
		}
	}
	
	@Override
    public void onEnable() {
    	NotificationManager.show(new Notification(NotificationType.INFO, "Mystra", "Criticals Toggled", 1));
    	super.onEnable();
    }

}
