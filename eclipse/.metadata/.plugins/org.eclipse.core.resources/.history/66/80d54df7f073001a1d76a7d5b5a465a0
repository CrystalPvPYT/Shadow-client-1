package mystra.mods;

import mystra.main.Category;
import mystra.notifications.Notification;
import mystra.notifications.NotificationManager;
import mystra.notifications.NotificationType;
import mystra.utils.RenderUtils;
import net.minecraft.entity.Entity;
import net.minecraft.entity.EntityLiving;
import net.minecraft.entity.EntityLivingBase;

public class MobESP extends Module{

	public MobESP() {
		super("MobESP", 0, Category.RENDER);
	}
	
	@Override
	public void onRender() {
		if(this.isToggled()) {
			for(Object e: mc.theWorld.loadedEntityList) {
				if(e instanceof EntityLiving) {
					RenderUtils.entityESPBox((Entity)e, 0);
				}
			}
		}
	}
	
	@Override
    public void onEnable() {
    	NotificationManager.show(new Notification(NotificationType.INFO, "Mystra", "MobESP Toggled", 1));
    	super.onEnable();
    }
}
