package mystra.mods;

import mystra.main.Category;
import mystra.notifications.Notification;
import mystra.notifications.NotificationManager;
import mystra.notifications.NotificationType;

public class ChestStealer extends Module{

	public ChestStealer() {
		super("ChestStealer", 0, Category.PLAYER);
	}
	
	@Override
    public void onEnable() {
    	NotificationManager.show(new Notification(NotificationType.INFO, "Mystra", "ChestStealer Enabled", 1));
    	super.onEnable();
    }
	
	@Override
	public void onDisable() {
		NotificationManager.show(new Notification(NotificationType.INFO, "Mystra", "ChestStealer Disabled", 1));
		super.onDisable();
	}

}
