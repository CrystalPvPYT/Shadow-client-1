package mystra.commands;

import mystra.command.Command;
import mystra.main.Mystra;

public class Help extends Command{

	@Override
	public String getAlias() {
		return "help";
	}

	@Override
	public String getDescription() {
		return "Shows all Mystra Commands";
	}

	@Override
	public String getSyntax() {
		return ". help";
	}

	@Override
	public void onCommand(String command, String[] args) throws Exception {
		if(args[0].equalsIgnoreCase("help")) {
		Mystra.addChatMessage("Mystra Commands:");
		Mystra.addChatMessage(".bind del | .bind set (module) (keybind) | .bind clear");
		Mystra.addChatMessage(".toggle (Module)");
		}
	}

}
