package mystra.mods;

import java.util.ArrayList;

import org.lwjgl.input.Keyboard;

import de.Hero.settings.Setting;
import mystra.main.Category;
import mystra.main.Mystra;

public class ClickGui extends Module{

	public ClickGui() {
		super("ClickGui", Keyboard.KEY_RSHIFT, Category.OTHER);
	}

	@Override
    public void setup(){
    	ArrayList<String> options = new ArrayList<>();
    	options.add("JellyLike");
    	options.add("New");
    	Mystra.setmgr.rSetting(new Setting("Design", this, "New", options));
    	Mystra.setmgr.rSetting(new Setting("Sound", this, false));
    	Mystra.setmgr.rSetting(new Setting("GuiRed", this, 255, 0, 255, true));
    	Mystra.setmgr.rSetting(new Setting("GuiGreen", this, 26, 0, 255, true));
    	Mystra.setmgr.rSetting(new Setting("GuiBlue", this, 42, 0, 255, true));
    }
    
    @Override
    public void onEnable()
    {
    	mc.displayGuiScreen(Mystra.clickgui);
    	toggle();
    	super.onEnable();
    }
}
