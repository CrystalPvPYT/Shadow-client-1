package mystra.mods;

import java.util.ArrayList;

import org.lwjgl.input.Keyboard;

import mystra.main.Category;
import mystra.utils.Wrapper;
import mystra.values.Value;
import mystra.mods.Module;

import org.darkstorm.minecraft.gui.component.BoundedRangeComponent.ValueDisplay;
import org.lwjgl.input.Keyboard;

public class Flight extends Module {
	
	Value flightSpeed = new Value("Flight Speed", 1, 1, 10, ValueDisplay.INTEGER);

	public Flight() {
		super("Flight", Keyboard.KEY_F, Category.PLAYER);
	}

	public void onUpdate() {
		if (!this.getState()) {
			return;
		}
		mc.thePlayer.capabilities.setFlySpeed((float) flightSpeed.getValue() / 10);
		mc.thePlayer.capabilities.isFlying = true;
	}

	public void onDisable() {
		mc.thePlayer.capabilities.isFlying = false;
	}

}