package mystra.commands;

import org.lwjgl.input.Keyboard;

import mystra.command.Command;
import mystra.main.Mystra;
import mystra.mods.Module;

public class Bind extends Command {
	
	@Override
	public String getAlias() {
		return "bind";
	}

	@Override
	public String getDescription() {
		return "Allows users to change keybinds for modules";
	}

	@Override
	public String getSyntax() {
		return ".bind set [MOD] [Key] | .bind del [MOD] | .bind clear";
	}

	@Override
	public void onCommand(String command, String[] args) throws Exception {
		if(args[0].equalsIgnoreCase("set")) {
			args[2] = args[2].toUpperCase();
			int key = Keyboard.getKeyIndex(args[2]);

			for(Module m: Mystra.getModules()) {
				if(args[1].equalsIgnoreCase(m.getName())) {
					m.setKey(Keyboard.getKeyIndex(Keyboard.getKeyName(key)));
					Mystra.addChatMessage("§a" + args[1] + " has been binded to &b" + args[2]);
				}
			}
			
		}else if(args[0].equalsIgnoreCase("del")) {
			for(Module m: Mystra.getModules()) {
				if (m.getName().equalsIgnoreCase(args[1])) {
					m.setKey(0);
					Mystra.addChatMessage("§a" + args[1] + " has been unbinded!");
				}
			}
		}else if(args[0].equalsIgnoreCase("clear")) {
			for(Module m: Mystra.getModules()) {
				m.setKey(0);
			}
			Mystra.addChatMessage("§cAll keys cleared!");
		}
	}
	
}