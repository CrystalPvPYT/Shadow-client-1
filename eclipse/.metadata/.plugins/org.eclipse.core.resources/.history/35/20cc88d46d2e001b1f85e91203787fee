package me.shadow.module.movement;

import me.shadow.event.EventTarget;
import me.shadow.event.events.EventUpdate;
import me.shadow.module.Category;
import me.shadow.module.Module;
import me.shadow.utils.player.PlayerUtils;

public class Strafe extends Module {

    public Strafe() {
        super("Strafe", 0, Category.MOVEMENT);
    }

    @EventTarget
    public void onUpdate(EventUpdate event) {
    	if (this.mc.thePlayer.hurtTime > 0) {
            return;
        }
        PlayerUtils.setSpeed((float)Math.sqrt(this.mc.thePlayer.motionX * this.mc.thePlayer.motionX + this.mc.thePlayer.motionZ * this.mc.thePlayer.motionZ));
    }
}

